<center>
  <h2>Here are the listings we found, <%= @name %></h2><br>
</center>
<% @jobs.each do |x| %>
<body>
    <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-3">
         <h3> <%= x.job_title %></h3><br>
      <h4>Company:</h4> 
      <h5><%= x.company %></h5><br>
      <h4> Where Are They Located?</h4>
            <h5><%= x.formatted_location %></h5><br>
      <h4> Date Posted:</h4>
            <h5><%= x.date %></h5><br> 
        <h4> Website</h4>
          <h5><a href= "<%= x.url %>">Think This Job Is For You?</a></h5>
        </div>
        <div id="main-content" class="col-xs-9">
                <div class="well bs-component">
        <h2> Overview</h2>
          <%= simple_format(x.description)%>
      </div>
        </div>
      </div>
    </div>
  </body>
<% end %>
